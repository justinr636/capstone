<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        @*
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        @Styles.Render("~/Content/css")
        *@
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <link href="../../StyleSheets/bootstrap.css" rel="stylesheet" type="text/css" />
        <link href="../../StyleSheets/bootstrap-theme.css" rel="stylesheet" type="text/css" />
        <link href="../../StyleSheets/bootstrap-responsive.min.css" rel="stylesheet" type="text/css" />
        <link href="../../StyleSheets/jquery-ui.min.css" rel="stylesheet" type="text/css" />

        @Scripts.Render("~/bundles/modernizr")
        @* @Scripts.Render("~/bundles/jquery") *@

        <script src="../../Scripts/jquery-1.11.2.min.js" type="text/javascript"></script>
        <script src="../../Scripts/jquery-ui.min.js" type="text/javascript"></script>
        <script src="../../Scripts/bootstrap.js" type="text/javascript"></script>

        @RenderSection("cssSection", required: false)

        <link href="../../StyleSheets/navmenu.css" rel="stylesheet" type="text/css" />
    </head>
    <body>
        <nav class="navbar navbar-default" role="navigation">
            <div id="navbar-container" class="container-fluid">
                <div class="collapse navbar-collapse">
                    <a class="navbar-brand" href="/Home/Index">
                        <img id="navbar-brand-image" src="../../Images/NeoQIC_icon_126_59.gif" height="59" width="126" />
                    </a>
                    <ul id="navbar-items" class="nav navbar-nav">
                        <li class=@(ViewBag.activeNav == 0 ? "selected" : "")><a href="/Home/Index">Home</a></li>
                        <li class=@(ViewBag.activeNav == 1 ? "selected" : "")><a href="/Charts/MyHospital/">My Hospital Report</a></li>
                        <li class=@(ViewBag.activeNav == 2 ? "selected" : "")><a href="/Charts/MassHospitals/">Massachussets Hospital Reports</a></li>
                        <li class=@(ViewBag.activeNav == 3 ? "selected" : "")><a href="/Charts/CustomizeCSV/">Customizable Charts</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        @* <li> @Html.Partial("_LoginPartial") </li> *@
                        @* <li class=@(ViewBag.activeNav == 5 ? "selected" : "")><a href="/NAS/ViewAll/">View/Edit Data</a></li> *@
                        <li id="printBtn"><a href="#">Print Page</a></li>
                    </ul>
                </div> @* collapse *@
            </div>     @* container-fluid *@
        </nav>

        @* Body Container *@
        <div class="container">
            @RenderBody()
        </div>

        @RenderSection("jsSection", required: false)
    </body>
</html>
