        <nav class="navbar navbar-default" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">NeoQIC NAS</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class=@(ViewBag.activeNav == 0 ? "active" : "")><a href="#">Home</a></li>
                        <li class=@(ViewBag.activeNav == 1 ? "active" : "")><a href="/NAS/New/">New</a></li>
                        <li class=@(ViewBag.activeNav == 2 ? "active" : "")><a href="/NAS/ViewAll/">View/Edit Data</a></li>
                        <li class=@(ViewBag.activeNav == 3 ? "active" : "")><a href="/Charts/Index/">Standard Charts</a></li>
                        <li class=@(ViewBag.activeNav == 4 ? "active" : "")><a href="/Charts/Customize/">Customizable Charts</a></li>
                        <li class=@(ViewBag.activeNav == 5 ? "active" : "")><a href="#">Contact Us</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            @Html.Partial("_LoginPartial")
                        </li>
                    </ul>
                </div> @* collapse *@
            </div>     @* container-fluid *@
        </nav>

        @* Body Container *@
        <div class="container">
            @RenderBody()
        </div>
